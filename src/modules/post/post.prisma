model Post {
    id          String    @id @default(uuid())
    title       String
    slug        String
    content     String
    published   Boolean   @default(false)
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
    publishedAt DateTime?
    Comment     Comment[]
}

model Comment {
    id     String @id @default(uuid())
    post   Post   @relation(fields: [postId], references: [id])
    postId String
}
